@model IEnumerable<Prodavnica.Models.kategorije>

@{
    ViewBag.Title = "Kategorije";
}

<h2>Kategorije</h2>

<p>
    @Html.ActionLink("Kreiraj novu kategoriju", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.kategorija)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.kategorija)
        </td>
        <td>
            @Html.ActionLink("Izmeni", "Edit", new { id=item.id }) |
            @Html.ActionLink("Detalji", "Details", new { id=item.id }) |
            @Html.ActionLink("Obrisi", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
